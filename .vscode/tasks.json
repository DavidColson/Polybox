    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild Build/vs2019/Polybox.sln -p:Configuration=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild Build/vs2019/Polybox.sln -p:Configuration=Release",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Rebuild Debug",
            "type": "shell",
            "command": "msbuild Build/vs2019/Polybox.sln -p:Configuration=Debug -t:Rebuild",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Rebuild Release",
            "type": "shell",
            "command": "msbuild Build/vs2019/Polybox.sln -p:Configuration=Release -t:Rebuild",
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}